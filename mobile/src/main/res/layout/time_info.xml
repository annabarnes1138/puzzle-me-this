<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/event_name"
    android:layout_marginTop="3dp"
    android:layout_marginStart="7dp">

    <RelativeLayout
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/timestamp_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/timestamp_icon_desc"
            android:src="@drawable/calendar_clock"
            android:tint="@color/icon_active" />

        <TextView
            android:id="@+id/timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/timestamp_icon"
            android:gravity="top"
            android:textSize="12sp"
            tools:text="2 hours ago" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/timespan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/timestamp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/timespan_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/timespan_icon_desc"
            android:src="@drawable/timer"
            android:tint="@color/icon_active" />

        <TextView
            android:id="@+id/timespan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/timespan_icon"
            android:gravity="top"
            android:textSize="12sp"
            tools:text="5 minutes" />
    </RelativeLayout>

</RelativeLayout>