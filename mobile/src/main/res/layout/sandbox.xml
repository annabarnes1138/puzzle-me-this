<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include android:id="@+id/include_name_plate"
                layout="@layout/name_plate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".44"/>

            <android.support.constraint.Barrier
                android:id="@+id/horizontal_barrier_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="include_name_plate"/>

            <LinearLayout
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/horizontal_barrier_1"
                android:divider="@drawable/vertical_divider"
                android:orientation="horizontal"
                android:dividerPadding="10dip"
                android:showDividers="middle"
                android:background="@color/status_bar_background">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/alerts_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textColor="@color/textColorPrimary"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/alerts_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/alerts_qty"
                            android:textSize="12sp"
                            android:textColor="@color/textColorPrimary"
                            android:text="ALERTS" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/todays_events_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/todays_events_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textColor="@color/textColorPrimary"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/todays_events_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/todays_events_qty"
                            android:textSize="12sp"
                            android:textColor="@color/textColorPrimary"
                            android:text="TODAY'S EVENTS" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/reward_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_gravity="center_vertical">
                        <at.grabner.circleprogress.CircleProgressView
                            xmlns:progress_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/rwd_circle"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            progress_view:cpv_autoTextSize="true"
                            progress_view:cpv_maxValue="100"
                            progress_view:cpv_fillColor="@color/windowBackground"
                            progress_view:cpv_barColor="@color/reward_bar_color"
                            progress_view:cpv_barColor1="@color/reward_bar_color1"
                            progress_view:cpv_barColor2="@color/reward_bar_color2"
                            progress_view:cpv_barWidth="6dp"
                            progress_view:cpv_rimColor="@color/reward_rim_color"
                            progress_view:cpv_rimWidth="8dp"
                            progress_view:cpv_innerContourSize="0dp"
                            progress_view:cpv_innerContourColor="@color/reward_contour_color"
                            progress_view:cpv_outerContourSize="0dp"
                            progress_view:cpv_outerContourColor="@color/reward_contour_color"
                            progress_view:cpv_textMode="Value"
                            progress_view:cpv_autoTextColor="true"
                            tools:cpv_value="23"/>
                        <TextView
                            android:id="@+id/rwd_status_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/rwd_circle"
                            android:textSize="12sp"
                            android:textColor="@color/textColorPrimary"
                            android:text="REWARD STATUS" />
                    </RelativeLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>