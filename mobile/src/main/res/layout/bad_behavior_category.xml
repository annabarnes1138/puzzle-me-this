<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bad_behavior_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/behavior_icon_text" />

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/emoticon_sad"
        android:tint="@color/badBehaviorCardBackground"
        android:layout_toEndOf="@id/category_text"
        android:layout_marginStart="3dp"
        android:contentDescription="@string/behavior_icon_text" />
</RelativeLayout>